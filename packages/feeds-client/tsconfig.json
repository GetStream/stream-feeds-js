{
  "compilerOptions": {
    "rootDir": "./src",
    "composite": true,
    "outDir": "./dist/types",
    "module": "preserve",
    "target": "ES2020",
    "lib": ["esnext", "dom"],
    "noEmitOnError": true,
    "noImplicitAny": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "paths": {
      "@self": ["../feeds-client/src/index.ts"]
    }
  },
  "files": ["./vite-env.d.ts"],
  "exclude": ["**/*.test.ts", "**/test-utils/**/*.ts"],
  "include": ["./src", "./package.json"]
}
