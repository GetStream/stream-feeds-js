{
  "compilerOptions": {
    "rootDir": ".",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "jsx": "react-jsx"
  },
  "include": ["**/*.test.ts", "**/test-utils/**/*.ts"]
}
