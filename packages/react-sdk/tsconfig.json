{
  "compilerOptions": {
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2020",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "module": "nodenext",
    "outDir": "dist",
    "declaration": true,
    "composite": true
  },
  "buildOptions": {
    "verbose": true
  },
  "include": ["src"]
}
