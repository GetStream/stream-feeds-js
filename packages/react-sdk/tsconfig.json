{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": ".ts/tsconfig.tsbuildinfo",
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["esnext", "dom"],
    "noEmitOnError": true,
    "noImplicitAny": true,
    "declaration": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react-jsx"
  },
  "exclude": ["**/*.test.ts"],
  "include": ["./src"],
  "references": [{ "path": "../feeds-client" }]
}
