{
  "defaultBase": "main",
  "release": {
    "projects": ["@stream-io/feeds-client", "@stream-io/feeds-react-native-sdk"],
    "projectsRelationship": "independent",
    "conventionalCommits": {
      "enabled": true,
      "types": {
        "feat": {
          "semverBump": "patch",
          "changelog": {
            "title": "Features"
          }
        },
        "fix": {
          "semverBump": "patch",
          "changelog": {
            "title": "Bug Fixes"
          }
        },
        "chore": {
          "semverBump": "patch",
          "changelog": {
            "title": "Other"
          }
        },
        "docs": {
          "changelog": false,
          "semverBump": "none"
        },
        "style": {
          "changelog": false,
          "semverBump": "patch"
        },
        "refactor": {
          "changelog": false,
          "semverBump": "patch"
        },
        "perf": {
          "semverBump": "patch",
          "changelog": {
            "title": "Performance"
          }
        },
        "test": {
          "changelog": false,
          "semverBump": "none"
        }
      }
    },
    "version": {
      "manifestRootsToUpdate": ["packages/feeds-client", "packages/react-native-sdk"],
      "currentVersionResolver": "git-tag",
      "specifierSource": "conventional-commits",
      "preserveLocalDependencyProtocols": false
    },
    "targetDefaults": {
      "nx-release-publish": {
        "options": {
          "packageRoot": "packages/{projectName}"
        }
      }
    },
    "changelog": {
      "projectChangelogs": {
        "renderOptions": {
          "authors": false,
          "commitReferences": true,
          "versionTitleDate": true,
          "applyUsernameToAuthors": false
        },
        "createRelease": "github"
      }
    }
  }
}
